<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_elementaut"
    android:gravity="center"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background1"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/txt_aut"
        android:textColor="#A7FFEB"
        android:textSize="30sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextEmailAddressaut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/txt_email"
        android:layout_centerInParent="true"
        android:textColorHint="#A7FFEB"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/editTextPasswordaut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/editTextEmailAddressaut"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:hint="@string/txt_password"
        android:textColorHint="#A7FFEB"
        android:minHeight="48dp"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/buttonautorization"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPasswordaut"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:text="@string/txt_autbtn"
        android:textColor="#FFFF"
        android:background="@drawable/button_reg" />

    <TextView
        android:id="@+id/textViewCreateAccaunt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/buttonautorization"
        android:layout_centerHorizontal="true"
        android:text="@string/txt_createac"
        android:textColor="#A7FFEB"
        android:textSize="20sp"
        android:gravity="center"/>


</RelativeLayout>