<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Автор -->
        <TextView
            android:id="@+id/textNameAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#1F2933"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Алексей Хворостов"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textTime"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Дата -->
        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#8A8A8A"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="12.01.2026"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Название проекта -->
        <TextView
            android:id="@+id/textNameProject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0B1220"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Сбор батареек и сортировка отходов в районе"
            app:layout_constraintTop_toBottomOf="@id/textNameAuthor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Описание (обрезка тут) -->
        <TextView
            android:id="@+id/textMainView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="#212121"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Коротко описываем, что именно делаем, где и зачем. Длинный текст обрежется и не будет занимать весь экран..."
            app:layout_constraintTop_toBottomOf="@id/textNameProject"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Блок статистики -->
        <LinearLayout
            android:id="@+id/statsRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/textMainView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Комментарии -->
            <TextView
                android:id="@+id/textComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_comment"
                android:textSize="13sp"
                android:textColor="#6B7280"/>

            <TextView
                android:id="@+id/count_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#1F2933"/>

            <View
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <!-- Лайки -->
            <TextView
                android:id="@+id/textLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_like"
                android:textSize="13sp"
                android:textColor="#6B7280"/>

            <TextView
                android:id="@+id/count_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#1F2933"/>
        </LinearLayout>

        <!-- Лайк -->
        <ImageButton
            android:id="@+id/likeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="Like"
            android:padding="8dp"
            android:src="@drawable/like_heart_selector"
            app:tint="#00695C"
            app:layout_constraintTop_toBottomOf="@id/statsRow"
            app:layout_constraintStart_toStartOf="parent"/>


        <!-- Кнопка перейти к обсуждению -->
        <Button
            android:id="@+id/chatButton"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_reg"
            android:text="@string/txt_viewchat"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/statsRow"
            app:layout_constraintStart_toEndOf="@id/likeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:backgroundTint="@null"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
